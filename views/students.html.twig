<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css'>
        <link rel='stylesheet' href='css/styles.css'>
        <title>University Registrrrrraaaarrrrr!!</title>
    </head>
    <body>
        <div class='container'>
            <h1>Student list:</h1>
            <div class='row'>
                <div class='col-md-6'>
                    {% if students is not empty %}
                        {% for student in students %}
                            <ul>
                                <li>Student name: <a href='/edit_student/{{ student.getId }}'>{{ student.getName }}</a> Enroll date: {{ student.getEnrollDate }}</li>
                            </ul>
                        {% endfor %}
                        {% else %}
                        List Empty!
                    {% endif %}
                </div>

                <div class='col-md-6'>
                    <h3>Add student:</h3>
                    <form action='/add_student' method='post'>
                        <div class='form-group'>
                            <label for='name'>Name:</label>
                            <input id='name' name='name' class='form-control' type='text'>
                        </div>
                        <div class='form-group'>
                            <label for='enroll_date'>Enroll date:</label>
                            <input id='enroll_date' name='enroll_date' class='form-control' type='text'>
                        </div>
                        <button type='submit' class='btn'>Submit</button>
                    </form>
                    <form action="/delete_students" method="post">
                        <button type='submit' class='btn btn-danger'>DELETE.</button>
                    </form>
                </div>
            </div>
        </div>

    </body>
</html>
